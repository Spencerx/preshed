{
    "build": {
        "sdist": [
            "pip install -r requirements.txt",
            "python setup.py sdist"
        ],
        "install": [
            "pip install source.tar.gz"
        ],
        "wheel": [
            "python -m pip install -U setuptools pip wheel",
            "python untar.py source.tar.gz .",
            "python setup.py bdist_wheel"
        ]
    },
    "test": {
        "after": ["install"],
        "package": "preshed",
        "args": "--tb=native"
    }
}
